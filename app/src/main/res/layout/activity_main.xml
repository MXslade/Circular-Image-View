<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <com.example.customview.CircularImageView
        android:src="@drawable/simpson"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <com.example.circularimageview.CircularImageView
        android:id="@+id/carCircularImageView"
        android:src="@drawable/car"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <com.example.customview.CircularImageView
        android:src="@drawable/appa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/carCircularImageView"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>